<h2>Our 5 Latest Products</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Serial</th>
			<th>Added On</th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
			<tr>
				<td><%= product.title %></td>
				<td><%= product.description %></td>
				<td><%= number_to_currency(product.price) %></td>
				<td><%= product.serial_number %></td>
				<td><%= product.created_at %></td>
			</tr>
		<% end %>
	</tbody>
</table>